{
    "extends": ["standard", "plugin:react/recommended"],
    "plugins": [
        "standard",
        "promise",
        "react"
    ],
    "parser": "babel-eslint",
    "env": {
        "node": true,
        "mocha": true,
        "browser": true
    },
    "rules": {
        "quotes": "off",
        "react/prop-types": "off",
        "react/jsx-indent": 1,
        "no-unused-expressions": "off",
        "indent":"off",
        "no-mixed-spaces-and-tabs":"error",
        "space-before-function-paren":"off",
        "eqeqeq":"off",
        "no-trailing-spaces": "warn"
    }
}