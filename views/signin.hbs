<h1>Sign in</h1>
{{#if hasErrors}}
    <div style="color:red">
        {{#each errors}}
            <p>{{this}}</p>
        {{/each}}
    </div>
{{/if}}
<form action="/user/signin" method="post">
    <input type="text" name="username">
    <input type="password" name="password">
    <input type="submit">
</form>
<p>Don't have an account?<a href="/user/signup"> Sign up</a></p>